{
    "manifest_version": 3,
    "name": "Coderecord",
    "description": "Track your progress, conquer coding challenges, and reach new heights with CodeRecord",
    "version": "1.0",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "alarms",
        "notifications"
      ],
    "content_scripts": [
        {
          "matches": ["https://leetcode.com/problems/*", "https://practice.geeksforgeeks.org/problems/*"],
          "js": ["./content/content.js"],
          "run_at": "document_idle"
        },
        {
          "matches": ["https://leetcode.com/problems/*", "https://practice.geeksforgeeks.org/problems/*"],
          "js": ["./content/successPopup.js"],
          "run_at": "document_idle"
        }
      ],
    "action": {
        "default_popup": "./popup/popup.html",
        "default_title": "Coderecord",
        "default_icon": "./assets/images/logo_min_bg--cropped.png"
    },
    "background": {
        "service_worker": "./background/background.js"
    }
}