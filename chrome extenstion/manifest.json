{
    "manifest_version": 2,
    "name": "Coderecord",
    "description": "Track your progress, conquer coding challenges, and reach new heights with CodeRecord",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "storage",
        "alarms",
        "notifications"
      ],
    "content_scripts": [
        {
          "matches": ["https://leetcode.com/problems/*"],
          "js": ["./content/content.js"]
        }
      ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Coderecord",
        "default_icon": "./assets/images/logo_min_bg--cropped.png"
    },
    "background": {
        "service_worker": "./background/background.js",
        "type": "module"
    }
}